<!DOCTYPE html>
<html>
  <head>
    <title>GestionContact</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<header>
	  	<div class="alert alert-dismissible fade" role="alert">
		  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
		    <i class="fa fa-times" aria-hidden="true"></i>
		  </button>
		</div>
	  	<nav class="navbar fixed-top navbar-inverse navbar-toggleable-md bg-inverse">
		  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
		    <i class="fa fa-bars" aria-hidden="true"></i>
		  </button>
		  <h1 class="navbar-brand">Leikir Web</h1>
		  <div class="collapse navbar-collapse" id="navbarSupportedContent">
		    <ul class="navbar-nav mr-auto">
		      <li class="nav-item">
		        <%= active_link_to "Contacts", contacts_path, class: "nav-link", active: :exact %>
		      </li>
		      <li class="nav-item">
		        <%= active_link_to "CrÃ©er", new_contact_path, class: "nav-link", active: :exact %>
		      </li>
		    </ul>
			<%= form_tag("/search", method: "get", class: "form-inline my-2 my-lg-0") do %>
			  <%= text_field_tag(:q, nil, class: "form-control mr-sm-2", placeholder: "Chercher") %>
			  <%= button_tag(type: "submit", class: "btn btn-outline-info my-2 my-sm-0") do %>
			  	<i class="fa fa-search" aria-hidden="true"></i>
			  <% end %>
			<% end %>
		  </div>
		</nav>
	</header>
	<section class="container">
    	<%= yield %>
    </section>
  </body>
</html>
